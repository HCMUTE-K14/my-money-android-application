<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageView
      android:id="@+id/image_view_cancel"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="left|center"
      android:src="@drawable/ic_cancel" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="right|center"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/image_view_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit" />

      <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_delete" />
    </LinearLayout>


  </android.support.v7.widget.CardView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:orientation="vertical"
      android:weightSum="3">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:layout_marginTop="23dp"
          android:gravity="center|top">

          <ImageView
            android:id="@+id/image_icon_saving"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_not_selected" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginTop="20dp"
          android:orientation="vertical"
          android:weightSum="3">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left">
            <TextView
              android:id="@+id/txt_saving_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="15dp"
              android:text="Di Choi"
              android:textColor="@color/black"
              android:textSize="@dimen/txt_name_saving"

              />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/txt_money_goal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="15dp"
              android:text="+1500000"
              android:textColor="@color/black"

              android:textSize="@dimen/txt_name_saving" />
            <TextView
              android:id="@+id/txt_unit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="15dp"
              android:text="@string/txt_currencies_saving"
              android:textColor="@color/black"
              android:textSize="@dimen/txt_name_saving"

              />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="2">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/txt_saved"
                  android:textSize="@dimen/txt_wallet_rest_saving" />
                <TextView
                  android:id="@+id/txt_current_money"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="bomd"
                  android:textColor="@color/black"
                  android:textSize="@dimen/txt_wallet_rest_saving" />
              </LinearLayout>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:gravity="center|right"
                android:orientation="vertical">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/txt_need_saving"
                  android:textSize="@dimen/txt_wallet_rest_saving" />
                <TextView
                  android:id="@+id/txt_need_money"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="bomkaka"
                  android:textColor="@color/black"
                  android:textSize="@dimen/txt_wallet_rest_saving" />
              </LinearLayout>

            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="2">
              <SeekBar
                android:id="@+id/seek_bar_saving_info"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/process_saving"
                android:thumb="@null" />
            </LinearLayout>
          </LinearLayout>

        </LinearLayout>


      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center"
          android:orientation="vertical">

          <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="top|center"
            android:src="@drawable/ic_calendar" />
          <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_cashbook" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:weightSum="2">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">
            <TextView
              android:id="@+id/txt_date_saving"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="Date"
              android:textColor="@color/black"
              android:textSize="@dimen/txt_wallet_saving" />
            <TextView
              android:id="@+id/txt_time_rest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="@string/txt_rest_saving"
              android:textSize="@dimen/txt_wallet_rest_saving" />
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left">

            <TextView
              android:id="@+id/txt_name_wallet"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="@string/txt_wallet_name_saving"
              android:textColor="@color/black"
              android:textSize="@dimen/txt_wallet_saving" />
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:orientation="vertical"
      android:weightSum="3">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/image_view_take_in"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_cash_in" />
          <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_in"
            android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/image_view_take_out"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_cash_out" />
          <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_out"
            android:textColor="@color/colorPrimary" />
        </LinearLayout>

      </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/btn_list_transaction"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="30dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:background="@color/colorPrimary"
          android:text="@string/btn_list_transaction"
          android:textColor="@color/white" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>