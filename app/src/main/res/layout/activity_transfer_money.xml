<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <com.vn.hcmute.team.cortana.mymoney.ui.view.CardViewActionBar
    android:id="@+id/card_view_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:iconBack="@drawable/ic_back"
    app:textTitle="@string/txt_transfer_money" />
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="420dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="6">
      <LinearLayout
        android:id="@+id/btn_input_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_transparent_bounded_darken"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center" />
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:paddingLeft="10dp"
          android:gravity="center|left">
          <TextView
            android:id="@+id/txt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="24dp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/btn_choose_wallet_from"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_transparent_bounded_darken"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center">
          <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cashbook" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:orientation="vertical">
          <EditText
            android:id="@+id/txt_name_wallet_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/txt_select_wallet"
            android:textSize="18dp" />
        </LinearLayout>
      </LinearLayout>
      <ImageView
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginLeft="13dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_nav_arrow_down" />
      <LinearLayout
        android:id="@+id/btn_choose_wallet_to"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_transparent_bounded_darken"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center">
          <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cashbook" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:orientation="vertical">
          <EditText
            android:id="@+id/txt_name_wallet_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/txt_select_wallet"
            android:textSize="18dp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/btn_choose_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_transparent_bounded_darken"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center">
          <ImageView
            android:id="@+id/image_icon_category"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_not_selected" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:gravity="center|left"
          android:orientation="vertical">
          <EditText
            android:id="@+id/txt_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:focusable="false"
            android:hint="@string/txt_select_category"
            android:textSize="23dp" />
        </LinearLayout>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center">
          <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_description" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">
          <EditText
            android:id="@+id/txt_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:hint="@string/txt_note"
            android:textSize="18dp" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:id="@+id/btn_choose_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_transparent_bounded_darken"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="center">
          <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_calendar_budget" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:orientation="vertical">
          <EditText
            android:id="@+id/txt_date_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:textSize="18dp" />
        </LinearLayout>
      </LinearLayout>


    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>