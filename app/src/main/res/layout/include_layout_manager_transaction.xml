<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:fillViewport="true">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:weightSum="5">
          <LinearLayout
            android:id="@+id/btn_input_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_bounded_darken"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5">

            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:paddingLeft="10dp"
              android:gravity="center|left">
              <TextView
                android:id="@+id/txt_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="24dp" />
            </LinearLayout>
          </LinearLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/colorPrimary" />
          <LinearLayout
            android:id="@+id/btn_choose_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_bounded_darken"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5"
              android:gravity="center">
              <ImageView
                android:id="@+id/image_icon_category"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_not_selected" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:clickable="true"
              android:gravity="center|left"
              android:orientation="vertical">
              <EditText
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:focusable="false"
                android:hint="@string/txt_select_category"
                android:textSize="23dp" />
            </LinearLayout>

          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5"
              android:gravity="center">
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_description" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical">
              <EditText
                android:id="@+id/txt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:hint="@string/txt_note"
                android:textSize="18dp" />
            </LinearLayout>
          </LinearLayout>
          <LinearLayout
            android:id="@+id/btn_choose_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_bounded_darken"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5"
              android:gravity="center">
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_calendar_budget" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:clickable="true"
              android:orientation="vertical">
              <EditText
                android:id="@+id/txt_date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:focusable="false"
                android:textSize="18dp" />
            </LinearLayout>
          </LinearLayout>
          <LinearLayout
            android:id="@+id/btn_choose_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_bounded_darken"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5"
              android:gravity="center">
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cashbook" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:clickable="true"
              android:orientation="vertical">
              <EditText
                android:id="@+id/txt_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:focusable="false"
                android:textSize="18dp" />
            </LinearLayout>
          </LinearLayout>

        </LinearLayout>
      </android.support.v7.widget.CardView>


      <LinearLayout
        android:id="@+id/linear_more_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableRight="@drawable/ic_down"
          android:text="@string/txt_add_more_detail"
          android:textColor="@color/green"
          android:textSize="17dp" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/linear_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">
        <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="56dp">
          <LinearLayout
            android:id="@+id/btn_choose_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_transparent_bounded_darken"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="5"
              android:gravity="center">
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_with" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:clickable="true"
              android:orientation="vertical">
              <EditText
                android:id="@+id/txt_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/txt_with"
                android:textSize="18dp" />
            </LinearLayout>
          </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="168dp"
          android:layout_marginTop="20dp">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
              android:id="@+id/btn_choose_location"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/button_transparent_bounded_darken"
              android:clickable="true"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/ic_location" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">
                <EditText
                  android:id="@+id/txt_location"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:paddingLeft="10dp"
                  android:clickable="false"
                  android:hint="@string/txt_select_location"
                  android:focusable="false"
                  android:textSize="18dp" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:id="@+id/btn_choose_event"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/button_transparent_bounded_darken"
              android:clickable="true"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/ic_calendar_budget" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">
                <EditText
                  android:id="@+id/txt_event"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:paddingLeft="10dp"
                  android:clickable="false"
                  android:focusable="false"
                  android:hint="@string/txt_select_event"
                  android:textSize="18dp" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:id="@+id/btn_choose_date_notify"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/button_transparent_bounded_darken"
              android:clickable="true"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/ic_reminder" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">
                <EditText
                  android:id="@+id/txt_remind"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:paddingLeft="10dp"
                  android:clickable="false"
                  android:focusable="false"
                  android:hint="@string/txt_end_date"
                  android:textSize="18dp" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
          android:id="@+id/card_view_select_image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
              android:id="@+id/btn_choose_image_gallery"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minHeight="56dp"
              android:orientation="horizontal"
              android:weightSum="2">
              <LinearLayout
                android:id="@+id/linear_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/ic_photo" />
              </LinearLayout>
              <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
              android:id="@+id/recyclerView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/btn_choose_image_gallery" />
          </RelativeLayout>
        </android.support.v7.widget.CardView>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>