<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container_person"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:background="?selectableItemBackground">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <ImageView
      android:id="@id/image_view_icon_wallet"
      android:layout_width="50dp"
      android:layout_height="50dp" />

    <LinearLayout
      android:id="@+id/linear_layout_title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/image_view_icon_wallet"
      android:paddingLeft="10dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/txt_name"
        style="@style/ListItemSubTitleStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="fsdafdsafdsafdsafsadfdsafsda"
        android:textSize="18sp" />

      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
          android:id="@+id/txt_describe"
          style="@style/ListItemSubTitleStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="fdsafdsafsdafdsa"
          android:textSize="15sp" />

      </RelativeLayout>

    </LinearLayout>

    <ImageView
      android:id="@+id/check_box"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/ripple"
      android:src="@drawable/ic_three_dot" />

  </RelativeLayout>

</android.support.v7.widget.CardView>