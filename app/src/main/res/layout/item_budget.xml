<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="10dp"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:weightSum="12">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:gravity="right">
      <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"

        android:src="@drawable/ic_saving" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/txt_budget_name"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="15dp"
          android:paddingLeft="15dp"
          android:text="@string/txt_saving_name"
          android:textColor="@color/black"
          android:textSize="@dimen/item_name_saving" />
        <TextView
          android:id="@+id/txt_range_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:text="14/9-20/12" />
      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:paddingLeft="15dp"
          android:orientation="vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_rest_saving"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_saving_small" />

        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:paddingRight="15dp"
          android:gravity="right"
          android:orientation="vertical">
          <TextView
            android:id="@+id/txt_money_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1500000 Ä‘"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_saving_small" />
          <TextView
            android:id="@+id/txt_time_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 days left"
            android:textSize="@dimen/item_name_saving_small" />
        </LinearLayout>

      </LinearLayout>

      <SeekBar
        android:id="@+id/seek_bar_budget"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/process_saving"
        android:thumb="@null" />

    </LinearLayout>


  </LinearLayout>

</android.support.v7.widget.CardView>