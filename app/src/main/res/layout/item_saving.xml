<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginTop="10dp"
  >
 <LinearLayout
   android:layout_width="match_parent"
   android:layout_height="120dp"
   android:orientation="horizontal"
   android:weightSum="12">

   <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="right"
     android:layout_weight="10">
     <ImageView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="5dp"

       android:src="@drawable/ic_saving"/>
   </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:orientation="vertical">
      <TextView
        android:id="@+id/txt_saving_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_saving_name"
        android:textSize="@dimen/item_name_saving"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1"
          android:paddingLeft="15dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_saving_small"
            android:text="@string/txt_goal_saving"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_rest_saving"
            android:textSize="@dimen/item_name_saving_small" />

        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="right"
          android:paddingRight="15dp">
          <TextView
            android:id="@+id/txt_money_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_saving_small"
            android:text="+1500000"
            />
          <TextView
            android:id="@+id/txt_time_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Còn 3 ngày"
            android:textSize="@dimen/item_name_saving_small" />
        </LinearLayout>

      </LinearLayout>

      <SeekBar
        android:id="@+id/seek_bar_saving"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/process_saving"
        android:layout_marginTop="8dp"
        android:thumb="@null"
        android:max="100"
        android:progress="0"
        />

    </LinearLayout>


 </LinearLayout>

</android.support.v7.widget.CardView>