<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="70dp"
  android:layout_marginBottom="5dp">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_centerVertical="true">
      <TextView
        android:id="@+id/txt_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May"
        android:textColor="@color/black"
        android:textSize="18dp" />
      <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_month"
        android:text="2017"
        android:textSize="17dp" />
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true">
      <LinearLayout
        android:id="@+id/linear_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:orientation="vertical">
          <TextView
            android:id="@+id/txt_money_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="- 120,000 đ"
            android:textColor="@color/color_red"
            android:textSize="17dp"
            android:visibility="visible" />
          <TextView
            android:id="@+id/txt_money_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_money_expense"
            android:layout_centerVertical="true"
            android:text="120,000 đ"
            android:textColor="@color/green"
            android:textSize="17dp"
            android:visibility="visible" />
        </LinearLayout>

      </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:visibility="visible">
      <TextView
        android:id="@+id/txt_net_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="120,000 đ"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:visibility="visible" />
    </RelativeLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>