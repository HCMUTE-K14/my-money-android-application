<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
      android:id="@+id/image_view_cancel"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="left|center"
      android:src="@drawable/ic_cancel" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="right|center"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/image_view_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit" />

      <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_delete" />
    </LinearLayout>
  </android.support.v7.widget.CardView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:weightSum="3">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:weightSum="6">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">
        <ImageView
          android:id="@+id/image_icon_event"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/icon_not_selected" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="center|left">
        <TextView
          android:id="@+id/txt_name_event"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textColor="@color/black"
          android:textSize="23dp" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:weightSum="6">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">
        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_calendar" />
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical">
        <TextView
          android:id="@+id/txt_date_saving"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="Date"
          android:textColor="@color/black"
          android:textSize="@dimen/txt_wallet_saving" />
        <TextView
          android:id="@+id/txt_time_rest"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="@string/txt_rest_saving"
          android:textSize="@dimen/txt_wallet_rest_saving" />
      </LinearLayout>

    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:weightSum="6">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">
        <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_cashbook" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left">

        <TextView
          android:id="@+id/txt_name_wallet"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="@string/txt_wallet_name_saving"
          android:textColor="@color/black"
          android:textSize="@dimen/txt_wallet_saving" />

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear_mark_as_finished"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <Button
      android:id="@+id/btn_mark_as_finished"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:background="@color/colorPrimary"
      android:text="@string/mark_as_finished"
      android:textColor="@color/white" />

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <Button
      android:id="@+id/btn_list_transaction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:background="@color/colorPrimary"
      android:text="@string/btn_list_transaction"
      android:textColor="@color/white" />
  </LinearLayout>

</LinearLayout>