<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="56dp"
  android:background="@drawable/button_transparent_bounded_darken"
  android:clickable="true">
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_marginLeft="16dp"
    android:layout_centerVertical="true"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/child_indicator_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/img_child_indicator_mid"
      android:visibility="gone" />
    <ImageView
      android:id="@+id/child_indicator_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/img_child_indicator_end"
      android:visibility="gone" />
    <ImageView
      android:id="@+id/image_view_icon"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center" />
  </LinearLayout>
  <TextView
    android:id="@+id/text_view_name_cate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="85dp"
    android:layout_marginLeft="85dp"
    android:layout_alignWithParentIfMissing="true"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/layout_icon"
    android:layout_toStartOf="@+id/layout_icon"
    android:textColor="#dd000000"
    android:textSize="16sp" />
  <LinearLayout
    android:id="@+id/layout_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true">
    <ImageView
      android:id="@+id/image_view_selected"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_check_green"
      android:visibility="gone" />
    <ImageView
      android:id="@+id/image_view_popup"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:background="@drawable/button_transparent_bounded_darken"
      android:src="@drawable/ic_three_dot" />
  </LinearLayout>

</RelativeLayout>
