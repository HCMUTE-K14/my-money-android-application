<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <RelativeLayout
      android:id="@+id/layout_top_bar"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary"
      android:gravity="center_vertical">

      <LinearLayout
        android:id="@+id/ic_cancel"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:background="@drawable/button_transparent_bounded_darken"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
          android:layout_width="50.0dip"
          android:layout_height="match_parent"
          android:padding="10.0dip"
          android:tint="@color/white"
          android:src="@drawable/ic_back" />
      </LinearLayout>
      <TextView
        android:id="@+id/txt_title_edit_saving"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/ic_cancel"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/txt_transaction"
        android:textColor="@color/white"
        android:textSize="20sp" />
    </RelativeLayout>

  </android.support.v7.widget.CardView>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/swipeRefresh"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/appbar">
      <ExpandableListView
        android:id="@+id/list_transaction_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      </ExpandableListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <ProgressBar
      android:id="@+id/progress_bar_transaction"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:visibility="visible"
      android:layout_centerInParent="true" />
  </RelativeLayout>
</LinearLayout>