<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <RelativeLayout
      android:id="@+id/layout_top_bar"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:background="@color/color_background_login"
      android:gravity="center_vertical">

      <LinearLayout
        android:id="@+id/btn_close"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="10.0dip"
          android:src="@drawable/ic_cancel" />
      </LinearLayout>

      <TextView
        android:id="@+id/txt_add_wallet"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/txt_done"
        android:layout_toRightOf="@+id/btn_close"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/txt_add_wallet"
        android:textColor="@color/black"
        android:textSize="20sp" />
      <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:clickable="true"
        android:gravity="center|right"
        android:text="@string/txt_done"
        android:textColor="@color/black"
        android:textSize="20sp" />

    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <include layout="@layout/include_layout_text_add_edit_wallet" />
      <RelativeLayout
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:clickable="true">
        <ImageView
          android:id="@+id/imageView"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:layout_centerVertical="true"
          android:src="@drawable/ic_bills" />
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/imageView"
          android:orientation="vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_init_balance" />
          <EditText
            android:id="@+id/txt_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false" />
        </LinearLayout>
      </RelativeLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>
</LinearLayout>