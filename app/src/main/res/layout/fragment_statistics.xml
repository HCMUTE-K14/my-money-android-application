<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:weightSum="3">
          <RelativeLayout
            android:id="@+id/relative_category_expense"
            android:background="@drawable/button_transparent_bounded_darken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
              android:id="@+id/txt_category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="@string/txt_expense"/>
            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_down" />
            <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="4dp"
              android:layout_below="@+id/txt_category"
              android:background="@color/gray"/>
          </RelativeLayout>
          <RelativeLayout
            android:id="@+id/relative_time_or_category"
            android:background="@drawable/button_transparent_bounded_darken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
              android:id="@+id/txt_time_or_category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="@string/txt_over_time"/>
            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_down" />
            <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="4dp"
              android:layout_below="@+id/txt_time_or_category"
              android:background="@color/gray"/>
          </RelativeLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">
            <RelativeLayout
              android:id="@+id/relative_start_date"
              android:background="@drawable/button_transparent_bounded_darken"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingRight="15dp"
              android:paddingLeft="15dp"
              android:orientation="vertical"
              android:layout_weight="1">
              <TextView
                android:id="@+id/txt_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="January 2017"/>
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_down" />
              <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/txt_start_time"
                android:background="@color/gray"/>
            </RelativeLayout>
            <RelativeLayout
              android:id="@+id/relative_end_date"
              android:background="@drawable/button_transparent_bounded_darken"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingRight="15dp"
              android:paddingLeft="15dp"
              android:orientation="vertical"
              android:layout_weight="1">
              <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="November 2017"/>
              <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_down" />
              <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/txt_end_time"
                android:background="@color/gray"/>
            </RelativeLayout>
          </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <View
        android:id="@+id/view_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    </LinearLayout>
  </ScrollView>
</LinearLayout>