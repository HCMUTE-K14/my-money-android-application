<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageView
      android:id="@+id/image_view_cancel"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="left|center"
      android:src="@drawable/ic_cancel" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="right|center"
      android:orientation="horizontal">
      <ImageView
        android:id="@+id/image_view_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit" />

      <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_delete" />
    </LinearLayout>
  </android.support.v7.widget.CardView>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:weightSum="5">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:id="@+id/image_icon_category"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:src="@drawable/ic_saving" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:gravity="center|left">
                <TextView
                  android:id="@+id/txt_budget_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="All"
                  android:textColor="@color/color_gray"
                  android:textSize="25dp" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left">
                <TextView
                  android:id="@+id/txt_goal_money"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="+22000000 Ä‘"
                  android:textColor="@color/black"
                  android:textSize="23dp" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:gravity="center|left"
                    android:orientation="vertical">
                    <TextView
                      android:id="@+id/txt_spent"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/spent"
                      android:textSize="@dimen/txt_wallet_rest_saving" />
                    <TextView
                      android:id="@+id/txt_current_money"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="bomd"
                      android:textColor="@color/black"
                      android:textSize="@dimen/txt_wallet_rest_saving" />
                  </LinearLayout>

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:gravity="center|right"
                    android:orientation="vertical">
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/left"
                      android:textSize="@dimen/txt_wallet_rest_saving" />
                    <TextView
                      android:id="@+id/txt_need_money"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="bomkaka"
                      android:textColor="@color/black"
                      android:textSize="@dimen/txt_wallet_rest_saving" />
                  </LinearLayout>

                </LinearLayout>

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="2">
                  <SeekBar
                    android:id="@+id/seek_bar_saving_info"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/process_saving"
                    android:thumb="@null" />
                </LinearLayout>
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/ic_calendar_budget" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                  android:id="@+id/txt_range_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="This month"
                  android:textColor="@color/black" />
                <TextView
                  android:id="@+id/txt_rest_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="14 day left" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:weightSum="6">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/ic_cashbook" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center|left">
                <TextView
                  android:id="@+id/txt_wallet"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Anh Ky"
                  android:textColor="@color/black"
                  android:textSize="20dp" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:padding="10dp"
              android:gravity="center">
              <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_weight="1">
                  <TextView
                    android:id="@+id/lb_daily_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_recommend_budget"
                    android:textSize="12dp" />
                  <TextView
                    android:id="@+id/daily_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="0"/>
                </LinearLayout>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:layout_weight="1">
                  <TextView
                    android:id="@+id/lb_project_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_project_budget"
                    android:textSize="12dp" />
                  <TextView
                    android:id="@+id/project_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="0"/>
                </LinearLayout>
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/txt_actual_daily_spending" />
                <TextView
                  android:id="@+id/txt_money"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="0.00"
                  android:textColor="@color/black"
                  android:textSize="17dp" />
              </LinearLayout>
            </LinearLayout>

          </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
            android:id="@+id/txt_turn_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="@string/turn_off_notification" />
          <Switch
            android:id="@+id/switch_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <Button
        android:id="@+id/btn_list_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_list_transaction"
        android:textColor="@color/white" />


    </LinearLayout>
  </ScrollView>

</LinearLayout>