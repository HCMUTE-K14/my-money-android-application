<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <RelativeLayout
      android:id="@+id/layout_top_bar"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:background="@color/color_background_login"
      android:gravity="center_vertical">

      <LinearLayout
        android:id="@+id/btn_close"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="10.0dip"
          android:src="@drawable/ic_cancel" />
      </LinearLayout>

      <TextView
        android:id="@+id/txt_add_wallet"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/txt_done"
        android:layout_toRightOf="@+id/btn_close"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/txt_edit_wallet"
        android:textColor="@color/black"
        android:textSize="20sp" />
      <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:clickable="true"
        android:gravity="center|right"
        android:text="@string/txt_done"
        android:textColor="@color/black"
        android:textSize="20sp" />

    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
  <include android:id="@+id/txt_layout" layout="@layout/include_layout_text_add_edit_wallet"/>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp">

      <CheckBox
        android:id="@+id/check_box_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:orientation="vertical">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/txt_archive"
          android:textSize="16sp" />
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/txt_info__archive"
          android:textSize="12sp" />
      </LinearLayout>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

  <LinearLayout
    android:id="@+id/btn_remove_wallet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:paddingLeft="60dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="false">
    <ImageView
      android:id="@+id/imageView"
      android:layout_width="30dp"
      android:layout_height="match_parent"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/ic_delete" />

    <android.support.v7.widget.AppCompatButton
      android:id="@+id/button"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"

      android:background="?attr/selectableItemBackground"
      android:clickable="false"
      android:gravity="left|center"
      android:text="@string/txt_remove_wallet"
      android:textColor="#E51C23"
      android:textSize="15sp" />

  </LinearLayout>
</LinearLayout>