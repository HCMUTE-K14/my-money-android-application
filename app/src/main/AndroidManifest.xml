<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.vn.hcmute.team.cortana.mymoney">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".MyMoneyApplication"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <!-- Facebook SDK -->
    <meta-data
      android:name="com.facebook.sdk.ApplicationId"
      android:value="@string/facebook_app_id" />

    <activity
      android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
      android:label="@string/app_name"
      android:name="com.facebook.FacebookActivity" />
    <activity
      android:exported="true"
      android:name="com.facebook.CustomTabActivity">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <data android:scheme="@string/fb_login_protocol_scheme" />
      </intent-filter>
    </activity>

    <!-- User -->
    <activity android:name=".ui.login.LoginActivity">

    </activity>
    <activity
      android:launchMode="singleTop"
      android:name=".ui.register.RegisterActivity"
      android:screenOrientation="portrait" />

    <activity
      android:launchMode="singleTop"
      android:name=".ui.forgetpassword.ForgetPasswordActivity"
      android:screenOrientation="portrait" />

    <!-- Main -->
    <activity android:name=".ui.welcome.WelcomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- Wallet -->
    <activity android:name=".ui.wallet.SelectWalletActivity" />
    <activity android:name=".ui.wallet.AddWalletActivity" />
    <activity android:name=".ui.wallet.EditWalletActivity" />
    <activity android:name=".ui.wallet.MyWalletActivity" />
    <activity android:name=".ui.wallet.TransferMoneyActivity" />
    <!-- Saving -->

    <activity android:name=".ui.saving.AddSavingActivity" />
    <activity android:name=".ui.saving.TransferMoneySavingActivity" />
    <activity android:name=".ui.saving.InfoSavingActivity" />
    <activity android:name=".ui.saving.EditSavingActivity" />
    <activity android:name=".ui.saving.TransactionSavingActivity" />
    <!--Budget-->
    <activity android:name=".ui.budget.AddBudgetActivity" />
    <activity android:name=".ui.budget.EditBudgetActivity" />
    <activity android:name=".ui.budget.InfoBudgetActivity" />
    <activity android:name=".ui.budget.TransactionBudgetActivity" />

    <!-- Event -->
    <activity android:name=".ui.event.ActivityInfoEvent" />
    <activity android:name=".ui.event.ActivityEditEvent" />
    <activity android:name=".ui.event.ActivityAddEvent" />
    <activity android:name=".ui.event.ActivitySelectEvent" />
    <activity android:name=".ui.event.TransactionEventActivity" />

    <!-- Person -->
    <activity android:name=".ui.person.PersonActivity" />

    <!-- Currency -->
    <activity android:name=".ui.currencies.CurrenciesActivity" />

    <!-- Tool -->
    <activity android:name=".ui.tools.galleryloader.ui.GalleryLoaderActivity" />
    <activity android:name=".ui.iconshop.SelectIconActivity" />
    <activity android:name=".ui.tools.calculator.CalculatorActivity" />
    <!-- Category -->
    <activity android:name=".ui.category.CategoryActivity" />
    <activity android:name=".ui.category.ManagerCategoryActivity" />
    <activity android:name=".ui.category.ListParentCategoryActivity" />

    <!-- Transaction -->

    <activity android:name=".ui.transaction.ManagerTransactionActivity">

    </activity>
    <activity android:name=".ui.transaction.InforTransactionActivity" />
    <!-- Debt & Loan -->
    <activity android:name=".ui.transaction.InforTransactionForDebtLoanActivity" />
    <!--Statistic-->
    <activity android:name=".ui.statistics.transaction.TransactionStatisticsActivity">

    </activity>
    <!---->
    <activity android:name=".ui.main.MainActivity"/>

  </application>

</manifest>